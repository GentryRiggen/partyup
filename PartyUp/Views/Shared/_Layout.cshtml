<!DOCTYPE html>
<html ng-app="partyUp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Party Up</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/scripts/libs")
    @Scripts.Render("~/bundles/scripts/app")
</head>
<body layout="row">
    <!-- Side Navigation -->
    <md-sidenav class="md-sidenav-left md-whiteframe-z2" md-component-id="menuNav" md-is-locked-open="$mdMedia('gt-md')">
        <md-toolbar>
            <h1 class="md-toolbar-tools">Party Up</h1>
        </md-toolbar>
        <md-content layout-padding>
            <ul>
                <li>Home</li>
            </ul>
        </md-content>
    </md-sidenav>

    <!-- Main Content -->
    <div layout="column" role="main" flex>

        <!-- Top Nav -->
        <md-toolbar class="md-whiteframe-glow-z2 md-default-theme" md-component-id="left" ng-controller="headerCtrl as ctrl">
            <div class="md-toolbar-tools">
                <md-button ng-click="ctrl.openMenu()" class="md-icon-button" aria-label="Settings" hide-gt-md>
                    <md-icon md-svg-src="/client/app/images/menu.svg"></md-icon>
                </md-button>
                <h2>
                    <span>Home</span>
                </h2>
            </div>
        </md-toolbar>


        <md-content layout-padding class="ui-view-container">
            <ui-view></ui-view>
        </md-content>

    </div>

    @RenderBody()
</body>
</html>
